extends layout

block content
  style.
    .navGlyphs {
      float: right;
      font-size: 25px;
      color: white;
    }

    #pageTitle {
      float: left;
      font-size: 30px;
      color: white;
    }

    .container {
      margin-left: -30px;
      margin-right: -30px;
    }

    #locationRow {
      margin-top: 30px;
    }

    #locationTitle {
      color: white;
      font-size: 20px;
      margin-bottom: 5px;
    }

    #locationInput {
      height: 40px;
      padding: 6px 12px;
      font-size: 18px;
      line-height: 1.42857143;
      color: white;
      background-color: #933E98;
      background-image: none;
      border: 1px solid #933E98;
      border-radius: 8px;
      min-width: 200px !important;
    }

    #locationSearchBtn {
      color: #933E98;
      background-color: transparent;
      border-color: transparent;
      font-size: 15px;
      float: right;
    }

  .container
    .row
      .col-md-4
      .col-md-4.col-xs-12
        div
          span#pageTitle #{title}
          i.navGlyphs(style="padding-left: 20px;").glyphicon.glyphicon-user
          i.navGlyphs.glyphicon.glyphicon-envelope
      .col-md-4
    
    .row#locationRow
      .col-md-4
      .col-md-4.col-xs-12
        div
          span#locationTitle Location
          div(style='margin-top: 5px;')
            input#locationInput(type='search')
            button#locationSearchBtn.btn.btn-primary.btn-sm Change

    .row
      

      
